{% extends "::base.html.twig" %}
{% block title %}
{{ 'list.advertiser'|babel }}
{% endblock %}
{% block body %}
<h1>{{ 'list.advertiser'|babel }}</h1>

{% if entities|length > 0 %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'id'|babel }}</th>
        <th>{{ 'name'|babel }}</th>
        <th>{{ 'email'|babel }}</th>
        <th>{{ 'actions'|babel }}</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td><a href="{{ path('admin_advertiser_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{{ entity.username }}</td>
        <td>{{ entity.email }}</td>
        <td>
            <ul>
                <li>
                    <a href="{{ path('admin_advertiser_show', { 'id': entity.id }) }}">
                        {{ 'show'|babel }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_advertiser_edit', { 'id': entity.id }) }}">
                        {{ 'edit'|babel }}
                    </a>
                </li>
            </ul>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="message">{{ 'no.entities'|babel }}</div>
{% endif %}

<ul>
    <li>
        <a href="{{ path('admin_advertiser_new') }}">
            {{ 'create.new.entry'|babel }}
        </a>
    </li>
</ul>

{% endblock %}