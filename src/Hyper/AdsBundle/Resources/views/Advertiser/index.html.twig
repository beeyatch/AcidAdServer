{% extends "::base.html.twig" %}
{% block body %}
<h1>{{ 'advertiser.list'|trans({}, 'HyperAdsBundle') }}</h1>

{% if entities|length > 0 %}
<table class="records_list">
    <thead>
        <tr>
            <th>{{ 'id'|trans({}, 'HyperAdsBundle') }}</th>
            <th>{{ 'name'|trans({}, 'HyperAdsBundle') }}</th>
            <th>{{ 'email'|trans({}, 'HyperAdsBundle') }}</th>
            <th>{{ 'campaigns'|trans({}, 'HyperAdsBundle') }}</th>
            <th>{{ 'actions'|trans({}, 'HyperAdsBundle') }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_advertiser_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.campaigns|length }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_advertiser_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_advertiser_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="message">{{ 'no.entities'|trans({}, 'HyperAdsBundle') }}</div>
<ul>
    <li>
        <a href="{{ path('admin_advertiser_new') }}">
            {{ 'create.new.entry'|trans({}, 'HyperAdsBundle') }}
        </a>
    </li>
</ul>
{% endif %}
{% endblock %}