{% extends "::base.html.twig" %}
{% form_theme edit_form "HyperAdsBundle::acidFormTheme.html.twig" %}

{% block title %}
{{ 'edit.banner'|babel }}
{% endblock %}
{% block body %}
<h1>{{ 'edit.banner'|babel }}</h1>

<form action="{{ path('admin_banner_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal col-lg-8 col-offset-2" role="form">
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <a href="{{ path('admin_banner') }}" class="btn btn-link">
            {{ 'back.to.the.list'|babel }}
        </a>
        <div class="pull-right">
            <button type="submit" class="btn btn-primary">{{ 'edit'|babel }}</button>
        </div>
    </div>
</form>

<br class="clearfix" />
<form action="{{ path('admin_banner_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger">{{ 'delete'|babel }}</button>
</form>
{% endblock %}