{% extends "::base.html.twig" %}
{% block title %}
{{ 'list.zone'|babel }}
{% endblock %}
{% block body %}
<h1>{{ 'list.zone'|babel }}</h1>

{% if entities|length > 0 %}
<table class="table table-striped">
    <thead>
    <tr>
        <th>{{ 'id'|babel }}</th>
        <th>{{ 'name'|babel }}</th>
        <th>{{ 'page'|babel }}</th>
        <th>{{ 'enabled'|babel }}</th>
        <th>{{ 'max.width'|babel }}</th>
        <th>{{ 'max.height'|babel }}</th>
        <th>{{ 'type'|babel }}</th>
        <th>{{ 'actions'|babel }}</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
    <tr>
        <td>
            <a href="{{ path('admin_zone_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
        </td>
        <td>
            {{ entity.name }}
            <br />
            <a href="{{ path('banner_config_zone', {'zoneId': entity.id}) }}">{{ 'show.banners'|babel }}</a>
        </td>
        <td>{{ entity.page.name }}</td>
        <td>{{ entity.enabled }}</td>
        <td>{{ entity.maxWidth }}</td>
        <td>{{ entity.maxHeight }}</td>
        <td>{{ entity.type }}</td>
        <td>
            <ul>
                <li>
                    <a href="{{ path('admin_zone_show', { 'id': entity.id }) }}">
                        {{ 'show'|babel }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_zone_edit', { 'id': entity.id }) }}">
                        {{ 'edit'|babel }}
                    </a>
                </li>
            </ul>
        </td>
    </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="message">{{ 'no.entities'|babel }}</div>
{% endif %}
    <div class="pull-right">
        <a href="{{ path('admin_zone_new') }}" class="btn btn-primary">{{ 'create.new.entry'|babel }}</a>
    </div>
{% endblock %}