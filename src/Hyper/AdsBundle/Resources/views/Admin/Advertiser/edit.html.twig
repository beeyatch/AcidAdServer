{% extends "::base.html.twig" %}
{% form_theme edit_form "HyperAdsBundle::acidFormTheme.html.twig" %}

{% block title %}
{{ 'edit.advertiser'|babel({'advertiserName': entity.username}) }}
{% endblock %}
{% block body %}
<h1>{{ 'edit.advertiser'|babel({'advertiserName': entity.username}) }}</h1>

<form action="{{ path('admin_advertiser_update_handler', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal col-lg-8 col-offset-2" role="form">
    {{ form_widget(edit_form) }}
    <div class="form-actions">
        <a href="{{ path('admin_advertiser') }}" class="btn btn-link">{{ 'back.to.the.list'|babel }}</a>
        <div class="pull-right">
            <button type="submit" class="btn btn-danger" name="action" value="delete">{{ 'delete'|babel }}</button>
            <button type="submit" class="btn btn-primary" name="action" value="update">{{ 'edit'|babel }}</button>
        </div>
    </div>
</form>
{% endblock %}