{% extends "::base.html.twig" %}
{% block body %}
<h1>Banner list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Extension</th>
            <th>Width</th>
            <th>Height</th>
            <th>Type</th>
            <th>Title</th>
            <th>Linktitle</th>
            <th>Url</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_banner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.file }}</td>
            <td>{{ entity.extension }}</td>
            <td>{{ entity.width }}</td>
            <td>{{ entity.height }}</td>
            <td>{{ entity.type }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.linkTitle }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_banner_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_banner_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('admin_banner_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}