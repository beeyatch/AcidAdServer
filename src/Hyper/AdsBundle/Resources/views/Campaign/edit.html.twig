{% extends "::base.html.twig" %}
{% block title %}
{{ 'edit.campaign'|trans({'campaignName': entity.name}, 'HyperAdsBundle') }}
{% endblock %}
{% block body %}
<h1>Campaign edit</h1>

<form action="{{ path('admin_campaign_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_campaign') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('admin_campaign_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}