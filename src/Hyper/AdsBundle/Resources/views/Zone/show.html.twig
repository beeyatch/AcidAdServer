{% extends "::base.html.twig" %}
{% block title %}
{{ 'show.zone'|trans({'zoneName': entity.name}, 'HyperAdsBundle') }}
{% endblock %}
{% block body %}
<h1>Zone</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Enabled</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>Maxwidth</th>
            <td>{{ entity.maxWidth }}</td>
        </tr>
        <tr>
            <th>Maxheight</th>
            <td>{{ entity.maxHeight }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_zone') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_zone_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_zone_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}