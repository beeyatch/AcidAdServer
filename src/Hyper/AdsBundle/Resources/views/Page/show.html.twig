{% extends "::base.html.twig" %}
{% block title %}
{{ 'show.page'|babel({'pageName': entity.name}) }}
{% endblock %}
{% block body %}
<h1>{{ 'show.page'|babel({'pageName': entity.name}) }}</h1>

<table class="record_properties">
    <tbody>
    <tr>
        <th>{{ 'id'|babel }}</th>
        <td>{{ entity.id }}</td>
    </tr>
    <tr>
        <th>{{ 'name'|babel }}</th>
        <td>{{ entity.name }}</td>
    </tr>
    <tr>
        <th>{{ 'url'|babel }}</th>
        <td>{{ entity.url }}</td>
    </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_page') }}">
            {{ 'back.to.the.list'|babel }}
        </a>
    </li>
    <li>
        <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">
            {{ 'edit'|babel }}
        </a>
    </li>
    <li>
        <form action="{{ path('admin_page_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">{{ 'delete'|babel }}</button>
        </form>
    </li>
</ul>
{% endblock %}