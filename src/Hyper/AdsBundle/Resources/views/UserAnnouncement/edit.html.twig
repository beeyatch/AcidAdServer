{% extends "::base.html.twig" %}

{% block title %}
{{ 'edit.announcement'|babel({'%announcement%': announcement}) }}
{% endblock %}

{% block body %}

<h1>{{ 'edit.announcement'|babel({'%announcement%': announcement}) }}</h1>
<form method="POST" action="{{ url('user_announcement_update', {'announcement': announcement.id}) }}">
    <div>
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>
    <div>
        {{ form_label(form.announcementPaymentType) }}
        {{ form_widget(form.announcementPaymentType) }}
        {{ form_errors(form.announcementPaymentType) }}
    </div>
    <div>
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
        {{ form_rest(form) }}
    </div>
    <div class="form-actions">
        <input type="submit" class="btn btn-primary btn-large" value="{{ 'save'|babel }}">
        <input type="submit" class="btn btn-danger btn-large" value="{{ 'delete'|babel }}">
    </div>
</form>

{% endblock %}